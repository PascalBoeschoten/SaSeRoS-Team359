// Task for testing the touch sensor readout
task read_touch_sensor() {
    SetSensorTouch(SENSOR_TOUCH_IN);

    while(true){
        if(Sensor(SENSOR_TOUCH_IN) == 1) {
            OnFwd(OUT_AC, 100);
        }
        else {
            Off(OUT_AC);
        }
    }
}

